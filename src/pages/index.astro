  { name: 'Brand 2', logo: '/assets/logos/disney.png' },
  { name: 'Brand 3', logo: '/assets/logos/bmw.png' },
  { name: 'Brand 4', logo: '/assets/logos/zedd.png' },
  { name: 'Brand 5', logo: '/assets/logos/ted.png' },
  { name: 'Brand 6', logo: '/assets/logos/vsq.png' },
  { name: 'Brand 7', logo: '/assets/logos/thepianoguys.png' },
  { name: 'Brand 8', logo: '/assets/logos/cleanbandit.png' },
  //{ name: 'Brand 9', logo: '/assets/logos/grinderfilms.png' },
  // Add more brands as needed 
]

const liveActionBrands = [
  { name: 'Brand 1', logo: '/assets/logos/liveAction/netflix.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/foxsports.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/grinderfilms.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/pizzahut.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/pokemon.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/somersby.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/bleacherreport.png' },
  { name: 'Brand 1', logo: '/assets/logos/liveAction/moveforhunger.png' },

  //{ name: 'Brand 9', logo: '/assets/logos/grinderfilms.png' },
  // Add more brands as needed 
]

---

<BaseLayout>
  <div class="stack gap-20 lg:gap-48">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="Technical Artist"
          tagline="Hi, ðŸ‘‹ I'm Mark. I bring music to life with reactive animations and simulations."
          align="start"
        >
          <div class="links">
            <Link href="/contact" style="rounded">
              <Icon icon="readCV" size="1.33em" /> Business Inquiries
            </Link>
          </div>
        </Hero>
        <div class="avatar-wrapper">
          <div class="overlay"></div>
          <img
            alt="Headshot of Mark"
            width="480"
            height="620"
            src="/assets/doodlechaos-logo.jpg"
          />
        </div>
      </header>
        <BrandGrid myTitle="Digital" brands={digitalBrands}/>
        <BrandGrid myTitle="Live Action" brands={liveActionBrands}/>

    </div>

  </div>
</BaseLayout>

<style lang="scss">

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    img {
      object-fit: cover;
      object-position: top;
      border-radius: 1.5rem;
      box-shadow: var(--shadow-md);
    }
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    a {
      width: 100%;
      justify-content: center;
    }
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;

      img {
        aspect-ratio: 3 / 3;
        border-radius: 2.5rem;
        object-fit: cover;
        position: relative;
        filter: grayscale(75%) contrast(1);
      }

      .avatar-wrapper {
        position: relative;
      }

      .overlay {
        background-color: #ded600bb;
        position: absolute;
        width: 100%;
        top: 0px;
        bottom: 6px;
        z-index: 2;
        border-radius: 2.5rem;
        opacity: 0;
        mix-blend-mode: multiply;
        transition: opacity 350ms linear 0s;

        &:hover {
          opacity: 0.8;
          & + img {
            filter: saturate(120%) grayscale(20%);
          }
        }
      }
    }

    .links {
      margin-top: 0.5rem;
      flex-direction: row;
      gap: 0.5rem;

      a {
        width: auto;
        justify-content: flex-start;
      }
    }
  }
</style>
